/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/esga -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed

    assembly = 'https://raw.githubusercontent.com/ikmb/nf-testdata/master/esga/contig.fa'
    proteins_targeted = 'https://raw.githubusercontent.com/ikmb/nf-testdata/master/esga/proteins.fa'
    transcripts = 'https://raw.githubusercontent.com/ikmb/nf-testdata/master/esga/transcripts.fa'
    rm_lib = 'https://raw.githubusercontent.com/ikmb/nf-testdata/master/esga/repeats.celegans.fa'
    rnaseq_samples = 'https://raw.githubusercontent.com/ikmb/nf-testdata/master/esga/samples.csv'
    aug_species = 'caenorhabditis'
    spaln_taxon = "NematodC"
    evm = true
    trinity = true
    busco = true
    busco_lineage = "nematoda_odb10"
}

process {
   withName: BUSCO_DOWNLOADDB {
      executor = "local"
   }
}
